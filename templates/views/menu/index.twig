{% extends 'layout/restaurant.twig' %}

{% block content %}

    {% for key, food in foods %}
        <div class="columns">
            <ul class="price">
                <li class="header"><img src="{{food.src}}" width="100%" height="150px" /></li>
                <li>{{food.nombre}}</li>
                <li>{{food.precio}}</li>
                <li class="grey"><a href="#" class="button">Pedir!</a></li>
            </ul>
        </div>
    {% else %}
        <h3>No data!!</h3>
    {% endfor %}

{% endblock %}
